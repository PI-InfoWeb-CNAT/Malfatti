<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"
          charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Imagens/logo-malfatti.png" type="image/x-icon">
    <link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/content/CRUD.css")" rel="stylesheet" />
    @RenderSection("styles", false)
    <style>
        h1{
            background-color: white;
            color: black;
            margin-bottom: 1em;
            margin-top: 1em;
        }
        p {
            text-align: left;
            color: black;
        }

            p hover {
                color: rgba(158, 137, 94, 1);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="page-headerr">
                <h1>
                    MALFATTI
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3 col-md-3 bg-success">
                <ul class="nav nav-pills nav-stacked">
                    <li id="liHome" role="presentation" class="active"><a href="#">Home</a></li>
                    <li id="liCategorias" role="presentation">
                        @Html.ActionLink("Categorias", "Index", "Categorias", new { Area = "Tabelas" }, null)
                    </li>
                    <li id="liFabricantes" role="presentation">
                        @Html.ActionLink("Fabricantes", "Index", "Fabricantes", new { Area = "Cadastros" }, null)
                    </li>
                    <li id="liProdutos" role="presentation">
                        @Html.ActionLink("Produtos", "Index","Produtos", new { Area = "Tabelas" }, null)
                    </li>
                    <li id="liUsuarios" role="presentation">
                        @Html.ActionLink("Usuarios", "Index", "Usuario")
                    </li>
                    <li id="liCarrinhos" role="presentation">
                        @Html.ActionLink("Carrinhos", "Carrinho", "Carrinho")
                    </li>

                </ul>
            </div>
            <div class="col-xs-9 col-md-9">
                <br />
                @RenderBody()
            </div>
        </div> <br />
        <div class="row">
            <div>
                <small>Tabelas de CDUs</small>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/scripts/bootstrap.js")"></script>
    @RenderSection("ScriptPage", false);
</body>
</html>
